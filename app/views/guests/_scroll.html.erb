<% @guests = Guest.all %>
<div class="row">
  <div class="wrapper">
    <div class="messages-scrolling-container">
      <div id="scrolling">
        <ul>
          <% @guests.shuffle.each do |g, index| %>
              <li>
                <p><%= g.name %> says:</p>
                <p><%= g.message %></p>
              </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
<script>
startScroll();
</script>